<%= form_for(@ums_user) do |f| %>
  <% if @ums_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ums_user.errors.count, "error") %> prohibited this ums_user from being saved:</h2>

      <ul>
      <% @ums_user.errors.full_messages.each do |msg| %>
