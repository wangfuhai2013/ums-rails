    <%= f.label :name ,'姓名'%>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password ,"密码" %>
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :email ,'邮箱'%>
    <%= f.text_field :email %>
  </div>
    <div class="field">
    <%= f.label :role ,"角色"%>
    <%= f.select :role_id, @ums_roles.collect {|p| [ p.name, p.id ] }%>
  </div>
  <div class="field">
    <%= f.label :is_enabled ,'是否可用'%>
    <%= f.check_box :is_enabled %>
